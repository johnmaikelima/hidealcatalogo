{
  "name": "hideal-catalogo-react",
  "version": "1.0.0",
  "description": "Sistema de catálogo com React, Node.js e SQLite",
  "main": "server/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm install && npm run build",
    "start": "npm run build && node server/server.js",
    "start:prod": "node server/server.js",
    "postinstall": "cd client && npm install"
  },
  "keywords": ["catalogo", "react", "node", "sqlite"],
  "author": "Hideal Hidráulica",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.1"
  }
}
